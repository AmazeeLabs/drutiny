{% block findings %}
  {% for response in assessment.results|filter(r => r.isFailure) %}
    {% include 'report/policy/failure.md.twig' with {'result': response } %}
  {% endfor %}
  {% for response in assessment.results|filter(r => r.hasWarning) %}
    {% include 'report/policy/warning.md.twig' with {'result': response } %}
  {% endfor %}
  {% for response in assessment.results|filter(r => r.isNotice) %}
    {% include 'report/policy/notice.md.twig' with {'result': response } %}
  {% endfor %}
  {% for response in assessment.results|filter(r => r.hasError) %}
    {% include 'report/policy/error.md.twig' with {'result': response } %}
  {% endfor %}
  {% for response in assessment.results|filter(r => r.isSuccessful and not r.isNotice) %}
    {% include 'report/policy/success.md.twig' with {'result': response } %}
  {% endfor %}
{% endblock %}
